<body style="background-color: darkgray;align-content: center; font-family: 'Times New Roman', Times, serif;">
    <h2 class="lead" style="text-align:center;font-size: 20px">Login Form</h2>
    <hr />
    <div class="container">
        <div class="row">
            <img src="~/images/GROCERY-STORE.jpg" class="col-md-12 col-sm-12 col-md-10 col-lg-6" id="left" />

            <div class="col-md-12 col-sm-12 col-md-10 col-lg-6" id="right">
                <div class="limiter">
                    <div class="container-login100">
                        <div class="wrap-login100">

                            <form class="login100-form validate-form" asp-area="Users" asp-controller="Users" asp-action="Login" method="post" role="form">
                                <h2 style="text-align: center;"><span class="login100-form-title">Member Login</span></h2>

                                <div style="text-align: center;">
                                    <h3>
                                        @DateTime.Now
                                    </h3>
                                </div>

                                <div class="wrap-input100 validate-input" data-validate="Valid email is required: abc@gmail.com">
                                    <label for="usr">Email:</label><br />
                                    <input class="form-control" type="email" name="email" placeholder="Enter Email" required>
                                    <span class="focus-input100"></span>
                                    <span class="symbol-input100">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>
                                    </span>
                                </div>
                                <br />
                                <div class="wrap-input100 validate-input" data-validate="Password is required">
                                    <label for="pwd">Password:</label><br />
                                    <input class="form-control" type="password" name="password" placeholder="Enter Password" required>
                                    <span class="focus-input100"></span>
                                    <span class="symbol-input100">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    </span>
                                </div>
                                <br />
                                <div class="container-login100-form-btn">
                                    <input class="btn-outline-info" type="submit" value="Login" style="text-align: center;" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

