@model Store_Management_System.Areas.Users.Models.Users
@{
    ViewData["Title"] = "User Details";
}

<h1 style="text-align:center">Login User Details</h1>

<div class="container">
    <table border="1" class="table table-bordered" cellpadding="1" cellspacing="1">
        <thead>
            <tr>
                <td style="text-align:center; font-weight: bold;">Login Id</td>
                <td style="text-align:center; font-weight: bold;">User Id</td>
                <td style="text-align:center; font-weight: bold;">User Type</td>
                <td style="text-align:center; font-weight: bold;">First Name</td>
                <td style="text-align:center; font-weight: bold;">Las Nmae</td>
                <td style="text-align:center; font-weight: bold;">Email</td>
                <td style="text-align:center; font-weight: bold;">Password</td>
            </tr>
        </thead>

        <tr>
            <td style="text-align:center">@Model.LoginId</td>
            <td style="text-align:center">@Model.UserId</td>
            <td style="text-align:center">@Model.UserType</td>
            <td style="text-align:center">@Model.FirstName</td>
            <td style="text-align:center">@Model.LastName</td>
            <td style="text-align:center">@Model.Email</td>
            <td style="text-align:center">@Model.Password</td>
        </tr>
    </table>
</div>  